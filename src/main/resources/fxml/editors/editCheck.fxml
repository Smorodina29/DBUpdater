      </TextArea>
      <Label text="Текст сообщения:">
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </VBox.margin>
      </Label>
      <TextArea prefHeight="100.0" prefWidth="400.0" fx:id="messageTextArea">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
