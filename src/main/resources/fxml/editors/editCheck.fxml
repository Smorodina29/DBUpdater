      </TextField>
      <Label text="Тип проверки:">
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </VBox.margin>
      </Label>
      <ComboBox prefWidth="150.0" fx:id="typeComboBox">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
         </VBox.margin>
      </ComboBox>
      <Label text="Способ валидации:">
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
