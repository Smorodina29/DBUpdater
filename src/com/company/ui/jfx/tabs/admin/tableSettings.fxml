<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" minHeight="0.0" minWidth="0.0" prefHeight="446.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.ui.jfx.tabs.admin.TableSettingsController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#saveChanges" text="Сохранить" />
                <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refresh" text="Обновить" />
                <!--<Button fx:id="addButton" mnemonicParsing="false" text="Добавить" onAction="#add"/>-->
            </items>
        </ToolBar>
    </top>
   <center>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefWidth="200.0">
               <children>
                  <Label text="Выберите таблицу:">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox prefWidth="250.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <TableView prefWidth="200.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Ред." />
                <TableColumn minWidth="100.0" prefWidth="500.0" text="Название колонки" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <TitledPane animated="false" text="Настройка проверок" BorderPane.alignment="CENTER">
        <content>
          <VBox prefHeight="200.0" prefWidth="483.0">
               <children>
                  <TableView prefHeight="145.0" prefWidth="605.0">
                    <columns>
                      <TableColumn prefWidth="400.0" text="Название" />
                      <TableColumn prefWidth="75.0" text="Тип" />
                      <TableColumn prefWidth="75.0" text="Удаление" />
                    </columns>
                  </TableView>
                  <Button mnemonicParsing="false" text="Добавить проверку">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
        </content>
      </TitledPane>
   </bottom>
</BorderPane>
